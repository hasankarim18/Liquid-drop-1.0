<!doctype html>
<html data-theme="light">
  <head>
    <title>{{ page_title }}</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="description" content="{{ page_description | escape }}">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1,shrink-to-fit=no">
  {{ content_for_header }}
    <!-- Header hook for plugins -->
    {% comment %} #tailwind {% endcomment %}
    {{ 'tailwind.css' | asset_url | stylesheet_tag }}
    {{ 'application.css' | asset_url | stylesheet_tag }}
    {{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
    {{ 'custom-styles.css' | asset_url | stylesheet_tag }}


    <script defer src="{{ 'application.js' | asset_url  }}"></script>
    <script defer src="{{ 'custom-script.js' |  asset_url }}"></script>

  </head>
  <body>
    <div style="display:none"> {% sections 'header-group' %} </div>
    <main role="main">
      {{ content_for_layout }}
    </main>
  </body>

  <script defer src="{{ 'swiper-bundle.min.js' |  asset_url }}"></script>
</html>