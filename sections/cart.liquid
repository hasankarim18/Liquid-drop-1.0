<div class="my_container">

  {% if cart.item_count > 0 %}
    <div class="my-6">
      <div class="flex justify-between items-center">
        <h1 class="text-3xl">Your Cart</h1>
        <a href="{{ routes.all_products_collection_urls }}" class="link link-neutral font-semibold">Continue shopping</a>
      </div>
    </div>
    <div class="w-full flex justify-end">
      <form
        class="block max-w-6xl w-full"
        action="{{ routes.cart_url }}"
        method="post"
        novalidate>
        <div class="overflow-x-auto">
          <table class="table">
            <!-- head -->
            <thead>
              <tr>
                <th>
                  <label>
                    <input type="checkbox" class="checkbox" />
                  </label>
                </th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Total Price</th>

              </tr>
            </thead>
            <tbody>
              {% for item in cart.items %}
                <!-- row 1 -->
                <tr>
                  <th>
                    <label>
                      <input type="checkbox" class="checkbox" />
                    </label>
                  </th>
                  <td>
                    <div class="flex items-center gap-3">
                      <div class="">
                        <div class="mask mask-squircle ">
                          <a href="{{ item.url }}">
                            {% if item.image %}
                              <img
                                class="w-20 h-20 border rounded-md"
                                src="{{ item.image |  image_url: width:300, height:300  }}"
                                alt="{{ item.title }}" />
                            {% else %}
                              {{ 'product-1' | placeholder_svg_tag: 'w-20 h-20 border rounded-sm' }}
                            {% endif %}
                          </a>
                        </div>
                      </div>
                      <div>
                        <div class="font-bold">{{ item.title }}</div>
                        <div class="text-sm opacity-50">United States</div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div>
                      <input
                        class=" border-2  p-4 text-center"
                        type="text"
                        value="-">
                      <input class=" border-2  p-4 text-center" value="{{ item.quantity }}" />
                      <input
                        class=" border-2  p-4 text-center"
                        type="text"
                        value="+">
                    </div>
                  </td>
                  <td>{{ item.line_price | money }}</td>

                </tr>
              {% endfor %}


            </tbody>
            <!-- foot -->
            <tfoot>
              <tr>
                <th></th>
                <th>Job</th>
                <th>Total Price</th>
                <th>{{ cart.total_price | money }}</th>
              </tr>
            </tfoot>
          </table>
        </div>
      </form>
    </div>

  {% else %}
    <div>
      <h2 class="text-2xl mb-6 font-semibold text-center">
        Your cart is empty
      </h2>
      <div class="flex justify-center">
        <a class="btn btn-outline btn-lg" href="{{ routes.all_products_collection_url }}">Continue Shopping</a>
      </div>
    </div>
  {% endif %}


</div>